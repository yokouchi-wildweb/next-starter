{
  "domainConfigVersion": "1.2",
  "singular": "sample",
  "plural": "samples",
  "label": "サンプル",
  "dbEngine": "Neon",
  "idType": "uuid",
  "relations": [
    {
      "domain": "sample_category",
      "label": "サンプルカテゴリ",
      "fieldName": "sample_category_id",
      "fieldType": "uuid",
      "relationType": "belongsTo",
      "required": false,
      "onDelete": "RESTRICT"
    },
    {
      "domain": "sample_tag",
      "label": "サンプルタグ",
      "fieldName": "sample_tag_ids",
      "fieldType": "uuid",
      "relationType": "belongsToMany",
      "required": false,
      "includeRelationTable": true
    }
  ],
  "useCreatedAt": true,
  "useUpdatedAt": true,
  "useSoftDelete": true,
  "sortOrderField": "sort_order",
  "fields": [
    {
      "name": "name",
      "label": "名前",
      "fieldType": "string",
      "formInput": "textInput",
      "required": true
    },
    {
      "name": "number",
      "label": "数字",
      "fieldType": "integer",
      "readonly": false,
      "formInput": "numberInput",
      "required": false,
      "defaultValue": 999
    },
    {
      "name": "rich_number",
      "label": "リッチナンバー",
      "fieldType": "integer",
      "formInput": "stepperInput",
      "required": false
    },
    {
      "name": "switch",
      "label": "スイッチ",
      "fieldType": "boolean",
      "formInput": "switchInput",
      "required": false
    },
    {
      "name": "radio",
      "label": "ラジオボタン",
      "fieldType": "boolean",
      "formInput": "radio",
      "required": false,
      "displayType": "bookmark",
      "options": [
        { "value": true, "label": "はい" },
        { "value": false, "label": "いいえ" }
      ]
    },
    {
      "name": "select",
      "label": "セレクトボックス（Enum）",
      "fieldType": "enum",
      "formInput": "select",
      "required": false,
      "defaultValue": "orange",
      "options": [
        { "value": "apple", "label": "りんご" },
        { "value": "orange", "label": "オレンジ" },
        { "value": "berry", "label": "いちご" }
      ]
    },
    {
      "name": "multi_select",
      "label": "マルチセレクトコンボ",
      "fieldType": "array",
      "formInput": "multiSelect",
      "required": false,
      "options": [
        { "value": "apple", "label": "りんご" },
        { "value": "orange", "label": "オレンジ" },
        { "value": "cherry", "label": "さくらんぼ" }
      ]
    },
    {
      "name": "sale_start_at",
      "label": "販売開始日",
      "fieldType": "timestamp With Time Zone",
      "formInput": "datetimeInput",
      "required": false
    },
    {
      "name": "date",
      "label": "日付",
      "fieldType": "date",
      "formInput": "dateInput",
      "required": false
    },
    {
      "name": "time",
      "label": "時間",
      "fieldType": "time",
      "formInput": "timeInput",
      "required": false
    },
    {
      "name": "main_image",
      "label": "メイン画像",
      "fieldType": "mediaUploader",
      "formInput": "mediaUploader",
      "required": false,
      "uploadPath": "sample/main",
      "slug": "main",
      "mediaTypePreset": "imagesAndVideos",
      "accept": "image/*,video/*",
      "validationRule": {
        "maxSizeBytes": 104857600
      }
    },
    {
      "name": "sub_image",
      "label": "サブ画像",
      "fieldType": "mediaUploader",
      "formInput": "mediaUploader",
      "required": false,
      "uploadPath": "sample/sub",
      "slug": "sub",
      "mediaTypePreset": "imagesAndVideos",
      "accept": "image/*,video/*",
      "validationRule": {
        "maxSizeBytes": 104857600
      }
    },
    {
      "name": "description",
      "label": "説明文",
      "fieldType": "string",
      "readonly": false,
      "formInput": "textarea",
      "required": false
    },
    {
      "name": "sort_order",
      "label": "並び順",
      "fieldType": "string",
      "formInput": "hidden",
      "required": false
    }
  ],
  "fieldGroups": [
    {
      "key": "basic",
      "label": "基本情報",
      "fields": ["name", "description"],
      "bgColor": "#f0f7ff"
    },
    {
      "key": "numbers",
      "label": "数値設定",
      "fields": ["number", "rich_number"],
      "bgColor": "#fff7e6"
    },
    {
      "key": "selections",
      "label": "選択項目",
      "collapsible": true,
      "fields": ["switch", "radio", "select", "multi_select"],
      "bgColor": "#f6ffed"
    },
    {
      "key": "datetime",
      "label": "日時設定",
      "collapsible": true,
      "defaultCollapsed": true,
      "fields": ["sale_start_at", "date", "time"],
      "bgColor": "#fff0f6"
    },
    {
      "key": "media",
      "label": "メディア",
      "fields": ["main_image", "sub_image"],
      "bgColor": "#f5f5f5"
    }
  ],
  "searchFields": [
    "name",
    "description"
  ],
  "defaultOrderBy": [
    [
      "updatedAt",
      "DESC"
    ]
  ],
  "tableFields": [
    "name",
    "number",
    "rich_number",
    "switch",
    "radio",
    "select",
    "main_image",
    "description",
    "updatedAt"
  ],
  "useDetailModal": true,
  "addToAdminDataMenu": true,
  "useDuplicateButton": true,
  "useImportExport": true,
  "generateFiles": {
    "entities": true,
    "components": true,
    "hooks": true,
    "clientServices": true,
    "serverServices": true,
    "adminRoutes": true,
    "registry": true,
    "fieldConstants": true,
    "presenters": true
  }
}
