
APP_ENV=development

# 認証セッション用 JWT シークレット（任意の文字列に変更）
AUTH_JWT_SECRET=xT9!jvR6q3ZbW2p@E4sMhY0LdNfQ8uKt
# 出力ログのレベル（0 = 出力なし、3 = 最大）
NEXT_PUBLIC_LOG_LEVEL=3

# Drizzle / Neon 等の DB 接続文字列
DATABASE_URL=''

# Firebase (ブラウザ SDK 共通設定)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin 用サービスアカウント JSON
MY_SERVICE_ACCOUNT_KEY=''

# reCAPTCHA v3（https://www.google.com/recaptcha/admin/create）
# 未設定の場合は reCAPTCHA 検証がスキップされます
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# メール送信設定
# プロバイダー選択: resend（デフォルト） または sendgrid
# 未設定の場合は resend が使用されます
MAIL_PROVIDER=resend
# Resend（https://resend.com）
RESEND_API_KEY=
# SendGrid（https://sendgrid.com）
# MAIL_PROVIDER=sendgrid に設定した場合に必要
SENDGRID_API_KEY=

# Microsoft Clarity（空の場合は無効化）
NEXT_PUBLIC_MICROSOFT_CLARITY_ID=

# Claude API
ANTHROPIC_API_KEY=

# 決済プロバイダ設定
# dummy: 開発・テスト用（デフォルト）
# fincode: GMO Fincode
# square: Square
PAYMENT_PROVIDER=dummy

# GMO Fincode 設定
# テスト環境: https://api.test.fincode.jp
# 本番環境: https://api.fincode.jp
FINCODE_API_URL=
FINCODE_SECRET_KEY=
FINCODE_PUBLIC_KEY=
FINCODE_WEBHOOK_SIGNATURE=

# Square 設定
# sandbox: テスト環境 / production: 本番環境
SQUARE_ENVIRONMENT=sandbox
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_SIGNATURE_KEY=
# Webhook通知先URL（Squareダッシュボードに登録するURL）
SQUARE_NOTIFICATION_URL=
